<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/abc_action_bar_default_height_material"
    android:gravity="center_vertical"
    android:background="@color/primary">

    <com.balysv.materialripple.MaterialRippleLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:mrl_rippleOverlay="true"
        app:mrl_rippleDelayClick="false"
        app:mrl_rippleHover="true">

        <ImageButton
            android:padding="@dimen/actionbar_icon_padding"
            android:background="@android:color/transparent"
            android:id="@+id/button_icon"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:layout_width="@dimen/actionbar_icon_dimen"
            android:layout_height="match_parent"
            android:src="@drawable/ic_ab_drawer" />
    </com.balysv.materialripple.MaterialRippleLayout>

    <ImageView
        android:id="@+id/image_logo"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/carrefour_logo"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/actionbar_logo_height" />
</FrameLayout>